{
  "name": "@inventorymanager/inventory-manager-desktop",
  "private": true,
  "version": "0.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "yarn build && concurrently \"vite\" \"cross-env NODE_ENV=DEV yarn electron .\"",
    "build": "vue-tsc -b && vite build && esbuild ./src/electron/main.ts ./src/electron/preload.ts --external:electron --bundle --platform=node --outdir=dist"
  },
  "dependencies": {
    "@inventorymanager/electron-app-main": "workspace:*",
    "@inventorymanager/electron-app-preload": "workspace:*",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.2",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.0.0",
    "esbuild": "^0.25.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.1",
    "vue-tsc": "^2.2.8"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
